<div data-no-turbolink id="wrapper-1">
            <!-- ========= HEADER ========= -->
    <%=render 'partials/front_header'%>
    <section class="section-bar-1">
        <div class="container">
            <div class="callout-box-1">
                <div class="box-text">
                    <h3>Artist Gallery</h3>
                </div>
                <!-- <div class="box-text-2">
                    <output>Home/Artists</output>
                </div> -->
            </div>
        </div>
    </section>
     <section class="section section-margin">
        <div class="container">
            <div id="isotope-single" class="isotope thight margin">
                <% @data.each do|artist|%> 
                    <div class="item col-4">
                        <a href='<%=artist_path(artist.id)%>' >
                            <div class="isotope-info">
                                <img class="img-responsive" src="<%=artist.cover_pic.url(:natural)%>" alt=""/>
                            </div>
                        </a>
                        <h4><a href='<%=artist_path(artist.id)%>'><%=artist.name%></a></h4>
                        <p><a  href='<%=artist_path(artist.id)%>'><%=truncate(artist.work_desc)%></a></p> 
                    </div>
                <%end%>
            </div>
        </div>
        <div class="container">
            <div class="digg_pagination"><%= will_paginate @data%></div>
        </div>
    </section>
    <%=render 'partials/front_footer'%>
    <a class="scroll-top" href="#"><i class="fa fa-angle-up"></i></a>
            <!-- ========= END ========= -->
</div>
        