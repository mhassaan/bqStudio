<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="" ><i class="fa fa-home"></i> Newsletter</a></li>
      <li><a href="#">Edit</a></li>
      </ul>
      <%= render 'partials/error_messages' %>
      <div class="m-b-md">
        <h3 class="m-b-none">Newsletter Article</h3>
      </div>
      <section class="panel panel-default">
        <header class="panel-heading font-bold">
          Edit Newsletter Article
          <a style="float:right;margin-top:-7px;" href="/admin/newsletter/show_articles_of_newsletter/<%=@data.newsletter.id%>" class="btn btn-s-sm btn-default ">Back</a> 
        </header>
        <div class="panel-body">
          <%= form_for @data , url: update_articles_of_newsletter_admin_newsletter_index_path, method: 'post', :html=>{class: 'form-horizontal'} do |f|%>
              <div class="form-group">
                <label class="col-sm-2 control-label">Picture </label>
                <div class="col-sm-6">
                  <%= hidden_field_tag :article_id, @data.id   %>
                  <img src=<%=@data.avatar.url(:thumb)%>/> <br/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-6">  
                  <%= f.file_field :avatar, :class => 'file ',:autocomplete => "off"  %>
                </div>
              </div>
              <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Author</label>
                  <div class="col-sm-6">
                    <%= f.text_field :author, :class => 'form-control ', :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
              <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-6">
                    <%= f.text_field :title, :class => 'form-control ', :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
              <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Description</label>
                  <div class="col-sm-6">
                    <%= f.text_area :description, :class => 'form-control parsley-validated', :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
              <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                  <button type="submit" class="btn btn-primary">Save </button>
                </div>
              </div>
          <%end%>
        </div>
      </section>
    </section>
  </section>
  <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>
