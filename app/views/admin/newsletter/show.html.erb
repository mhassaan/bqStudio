<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="" ><i class="fa fa-home"></i> Newsletter</a></li>
      <li><a href="#">View</a></li>
      </ul>
      <div class="m-b-md">
        <h3 class="m-b-none">View Newsletter</h3>
      </div>
      <section class="panel panel-default">
        <header class="panel-heading font-bold">
         Newsletter Detail
        </header>
        <div class="panel-body">
          <form class="form-horizontal">
          
            <div class="form-group">
              <label class="col-sm-2 control-label">Name/Title</label>
              <div class="col-sm-8">
                 <input type="text" value="<%=@data.title%>" class="form-control" disabled="">
              </div>
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Publish Date</label>
                <div class="col-sm-8">
                   <input type="text" value="<%=@data.publisher_date%>" class="input-sm input-s datepicker-input form-control" disabled="">
                </div>
            </div> 
            <div class="line line-dashed line-lg pull-in"></div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Summary</label>
              <div class="col-sm-8">
                <%= text_area_tag 'summary', @data.summary, {class: 'form-control parsley-validated',rows: "6"}%>
                <!-- <textarea value="<%=@data.summary%>" class="form-control" disabled=""> -->
              </div>
            </div>

            <div class="line line-dashed line-lg pull-in"></div>
            <div class="form-group">
              <label class="col-sm-2 control-label">COver</label>
              <div class="col-sm-4">
                <%= image_tag @data.cover_pic.url(:medium) %>
              </div>
            </div>
          </form>
        </div>
      </section>
    </section>
  </section>
  <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>
