<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="" ><i class="fa fa-home"></i> Newsletter</a></li>
      <li><a href="#">Add</a></li>
    <!--   <li><a style="float:right;margin-top:5px;" href="#" class="btn btn-s-sm btn-info btn-rounded">Back</a> </li> -->
      </ul>
      <%= render 'partials/error_messages' %>
      <div class="m-b-md">
        <h3 class="m-b-none">Add Article</h3> 
      </div>
      <section class="panel panel-default">
        <header class="panel-heading font-bold">
          Fresh Article 
          <a style="float:right;margin-top:-7px;" href="<%=admin_newsletter_index_path%>" class="btn btn-s-sm btn-default ">Back</a> 
        </header>
        <div class="panel-body">
          <%= form_for @data , url: '/admin/newsletter/add_articles_to_newsletter' , method: 'post', :html=>{class: 'form-horizontal',multipart: true} do |f|%>
           
              <%= f.fields_for :article do |s|%>
                <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Picture </label>
                  <div class="col-sm-6">
                    <%= hidden_field_tag :letter_id, @data.id   %>
                    <%= s.file_field :avatar, :class => 'file ', :required => true, :autocomplete => "off"  %>
                  </div>
                </div>
                <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Author</label>
                  <div class="col-sm-6">
                    <%= s.text_field :author, :class => 'form-control ', :required => true, :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
                <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-6">
                    <%= s.text_field :title, :class => 'form-control ', :required => true, :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
                <div class="line line-dashed line-lg pull-in"></div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Description</label>
                  <div class="col-sm-6">
                    <%= s.text_area :description, :class => 'form-control parsley-validated', :required => true, :autocomplete => "off" ,rows: "6" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-6 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary">Save </button>
                  </div>
                </div>
              <%end%>
          <%end%>
        </div>
      </section>
    </section>
  </section>
  <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>
