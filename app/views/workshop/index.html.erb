<div data-no-turbolink id="wrapper-1">
            <!-- ========= HEADER ========= -->
    <%=render 'partials/front_header'%>
    <section class="section-bar-1">
        <div class="container">
            <div class="callout-box-1">
                <div class="box-text">
                    <h3>Workshop Gallery</h3>
                </div>
               <!--  <div class="box-text-2">
                    <output>Home/Workshop</output>
                </div> -->
            </div>
        </div>
    </section>
     <section class="section section-margin">
        <div class="container">
            <div id="isotope-single" class="isotope thight margin">
                <% @data.each do|work|%> 
                    <div class="item col-4">
                        <a href='<%=workshop_path(work.id)%>'>
                            <div class="isotope-info">
                                <img class="img-responsive" src="<%=work.cover_pic.url(:natural)%>" alt=""/>
                            </div>
                        </a>
                        <h4><a href='<%=workshop_path(work.id)%>'><%=work.name%></a></h4>
                        <p><a href='<%=workshop_path(work.id)%>'><%=work.location%></a></p> 
                    </div>
                <%end%>
            </div>
        </div>
    </section>
    <%=render 'partials/front_footer'%>
    <a class="scroll-top" href="#"><i class="fa fa-angle-up"></i></a>
            <!-- ========= END ========= -->
</div>
        